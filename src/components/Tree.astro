---
import logo from "../assets/JuhaMikael-Logo.svg";
import SocialMedia from "./SocialMedia.astro";
import Button from "../components/Button.astro";
import CustomButton from "../components/CustomButton";
import buyMeCoffee from "../assets/bmc-button.svg";
import Tree from "./Tree";
import Spotify from "./Spotify";
---

<section id="tree" class="w-fit">
  <section class="mt-10">
    <div class="flex justify-center lg:justify-start">
      <img src={logo} class="h-24 rounded-xl object-cover" />
    </div>
  </section>

  <section
    id="social-medias"
    class="mt-5 flex justify-center gap-x-4 lg:justify-start"
  >
    <SocialMedia
      iconName="instagram"
      iconPack="simple-icons"
      link="https://www.instagram.com/juhamikaell/"
    />
    <SocialMedia
      iconName="spotify"
      iconPack="simple-icons"
      link="https://open.spotify.com/artist/2heJl7jzvTYoHyR5xwSSea?si=w15Co8_TS-WudI9KMG29Cw&nd=1"
    />
    <SocialMedia
      iconName="facebook"
      iconPack="simple-icons"
      link="https://www.facebook.com/juhasmusic"
    />
    <SocialMedia
      iconName="linkedin"
      iconPack="simple-icons"
      link="https://www.linkedin.com/in/juha-savikko/"
    />
    <Button
      type="image-button"
      imgPath={buyMeCoffee}
      href="https://www.buymeacoffee.com/juhamikael"
    />
  </section>
  <section class="mt-8 flex flex-col">
    <div class="text-3xl">Music</div>
    <Tree
      artistProfiles={["Juha Mikael", "Juha", "Visioc"]}
      link={[
        "https://open.spotify.com/artist/2heJl7jzvTYoHyR5xwSSea?si=v8SkUoBcTVKav4SO0FM_TA",
        "https://open.spotify.com/track/6rm9DvkBN2sL7seMuxaGJO?si=aa899b2155804972",
        "https://open.spotify.com/artist/7Da1EQvDO77V9bAZwqYGcv?si=pWmAgCbrTFK2fg-BKYgRIQ",
      ]}
      icon="spotify"
      notificationText={"I have changed my artist name a few times. So my music is spread out on different artist accounts."}
      platform="Spotify"
      client:load
    />
    <Tree
      artistProfiles={[
        "Juha Mikael",
        "Juha Mikael Releases",
        "Juha Mikael ID's",
      ]}
      link={[
        "https://soundcloud.com/juhasmusic",
        "https://soundcloud.com/juhamikaelbeats",
        "https://soundcloud.com/visioc",
      ]}
      icon="soundcloud"
      notificationText={"My main account Juha Mikael is full. So I have created a few more accounts and have spread my music on them."}
      platform="Soundcloud"
      client:load
    />

    <Tree
      artistProfiles={["Juha Mikael"]}
      link={["https://soundcloud.com/juhasmusic"]}
      icon="youtube"
      platform="Youtube"
      client:load
    />
    <CustomButton
      text="Join my Discord server"
      link="https://discord.gg/cxp7EKw53w"
      icon="discord"
      client:load
    />
    <CustomButton
      text="Check out the Revived. community"
      link="https://revived.tv/"
      icon="revived"
      client:load
    />
  </section>

  <section class="flex flex-col">
    <div class="mt-10 text-3xl">Downloads</div>
    <CustomButton
      text="Free Downloads"
      link="https://www.dropbox.com/sh/yig5o9kvw2bzcov/AAAeZQPXGZcoRGbqDN_NoPjha?dl=0"
      icon="music"
      client:load
    />

    <CustomButton
      text="Templates on Sale"
      link="https://juhamikaelmusic.gumroad.com/"
      icon="music"
      client:load
    />
    <section class="mt-10">
      <div class=" text-3xl">Spotify</div>
      <div class="my-2 w-80">
        <iframe
          class="h-[55vh]"
          src="https://open.spotify.com/embed/artist/2heJl7jzvTYoHyR5xwSSea?utm_source=generator&theme=0"
          width="100%"
          height="352"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"></iframe>
      </div>
    </section>
  </section>

  <section class="flex">
    <CustomButton
      text="juhamikael.info"
      link="https://juhamikael.info/"
      icon="back"
      client:load
    />
  </section>
</section>
